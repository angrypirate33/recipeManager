<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.angrypirate.controllers.RecipeViewController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Recipe Title -->
    <Label fx:id="titleLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Ingredients Section -->
    <Label text="Ingredients:" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <ListView fx:id="ingredientsListView" VBox.vgrow="NEVER"/>

    <!-- Instructions Section -->
    <Label text="Instructions:" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <TextArea fx:id="instructionsTextArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>

    <!-- Close Button -->
    <HBox alignment="CENTER_RIGHT">
        <Button text="Close" onAction="#handleClose"/>
    </HBox>
</VBox>
